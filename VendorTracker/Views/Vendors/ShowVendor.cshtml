@using VendorTracker.Models;

@{
  ViewBag.Title = "Vendor and Order Tracker";
  Layout = "_Layout";
}

<div class="jumbotron">
<h1>Vendor @Model["vendor"].Name</h1>
</div>
<h2>Description: @Model["vendor"].Description</h2>
<img src="~/img/04.jpg" class="img-fluid">

<div class="content">
  <form action=""></form>
  @if (Model["orders"].Count == 0)
  {
    <p>There are no orders in this vendor yet</p>
  }
  <ol>
  @foreach (Order order in @Model["orders"])
    {
      <li>
        <a href='/vendors/@Model["vendor"].VendorId/orders/@order.OrderId'>@order.Title</a> (@order.Description),
      </li>

    }
  </ol>
</div>



<form action='/vendors/@Model["vendor"].VendorId/deleteall' method="post">
  <button class="btn btn-secondary btn-lg" type="submit" name="button">Delete All Orders</button>
</form>


<div class="links2">
  <div class="link">
    <p><a href='/vendors/@Model["vendor"].VendorId/orders/neworder'>Add a new order to vendor</a></p>
  </div>
  <div class="link">
    <p><a href='/vendors'>Return to vendors list</a></p>
  </div>
  <div class="link">
    <p><a href='/'>Return to Main Page</a></p>
  </div>
</div>