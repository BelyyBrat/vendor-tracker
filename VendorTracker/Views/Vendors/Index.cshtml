@using VendorTracker.Models;

@{
  ViewBag.Title = "Vendor and Order Tracker";
  Layout = "_Layout";
}

<div class="jumbotron">
<h5>Pierre's Bakery Vendors</h5>
</div>
@if (Model.Count == 0)
{
  <p>There are no vendors in Pierre's Bakery yet.</p>
}
<ol>
  @foreach (Vendor company in Model)
  {
    <li>
      @company.Name (@company.Description);
    </li>
  }
</ol>

<p><a href='/'>Back to main page</a></p>



