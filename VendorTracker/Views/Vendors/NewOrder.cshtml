@{
  ViewBag.Title = "Vendor and Order Tracker";
  Layout = "_Layout";
}

<div class="jumbotron">
<h5>Add new Order to Vendor</h5>
</div>

<div class="form">
  <form action="/vendors" method="post">
    <div class="form-group">
      <label for="title">Add order's title:</label>
      <input id="title" name="title" type="text">
    </div>
    <div class="form-group">
      <label for="description">Add order's description:</label>
      <input class="form-control" id="description" name="description" type="text">
    </div>
    <div class="form-group">
      <label for="price">Add order's price:</label>
      <input id="price" name="price" type="number">
    </div>
    <div class="form-group">
      <label for="date">Add order's date:</label>
      <input id="date" name="date" type="date">
    </div>  
    <button type="submit">Add Order</button>
  </form>
</div>


<p><a href='/'>Back to main page</a></p>